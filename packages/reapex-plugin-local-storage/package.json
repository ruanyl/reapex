{
  "name": "reapex-plugin-local-storage",
  "version": "1.0.0-beta.26",
  "description": "Persist application state to localStorage",
  "main": "lib/index.js",
  "scripts": {
    "build": "yarn run build:esm && npm run build:cjs",
    "build:esm": "tsc --module es2015 --outDir lib/esm --declaration",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs --declaration",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ruanyl/reapex.git"
  },
  "keywords": [
    "reapex",
    "redux",
    "localStorage"
  ],
  "devDependencies": {
    "@types/jest": "~27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-react-typescript": "^1.0.7",
    "import-sort-cli": "6.0.0",
    "import-sort-parser-typescript": "6.0.0",
    "import-sort-style-as": "1.3.1",
    "jest": "^27.0.6",
    "reapex": "^1.0.0-beta.25",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3"
  },
  "peerDependencies": {
    "reapex": ">= 1.0.0-beta.21"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "as"
    }
  },
  "author": "Yulong Ruan <ruanyu1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ruanyl/reapex/issues"
  },
  "homepage": "https://github.com/ruanyl/reapex/blob/master/packages/reapex-plugin-local-storage/README.md"
}

{
  "name": "reapex",
  "version": "1.1.1",
  "description": "A framework to build React application",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/cjs/index.d.ts",
  "scripts": {
    "build": "yarn run build:esm && npm run build:cjs",
    "build:esm": "tsc --module es2015 --outDir lib/esm --declaration",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs --declaration",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.34",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "ajv": "~8.6.3",
    "eslint": "^8.1.0",
    "eslint-config-react-typescript": "^1.0.7",
    "glob": "~7.2.0",
    "immutable": "^4.0.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-as": "^1.3.1",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "redux": "^4.1.2",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3",
    "tapable": "^2.2.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "as"
    }
  },
  "author": "Yulong Ruan <ruanyu1@gmail.com>",
  "license": "MIT",
  "keywords": [
    "micro frontend",
    "react",
    "vue",
    "state management"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ruanyl/reapex.git"
  },
  "homepage": "https://github.com/ruanyl/reapex",
  "bugs": "https://github.com/ruanyl/reapex/issues"
}

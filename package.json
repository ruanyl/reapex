{
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": ["packages/*", "examples/*"],
    "nohoist": ["**/@vue/cli-plugin-eslint", "**/@vue/cli-plugin-eslint/**"]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run --parallel test",
    "build": "yarn build:reapex && lerna run --no-private --parallel build --ignore reapex",
    "build:reapex": "lerna run --no-private --parallel build --scope reapex",
    "lint": "lerna run --parallel lint",
    "example:counter": "SKIP_PREFLIGHT_CHECK=true lerna run --scope counter start",
    "example:vue-counter": "lerna run --scope vue-counter start"
  },
  "repository": "https://github.com/ruanyl/reapex.git",
  "author": "Yulong Ruan <ruanyu1@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
